<Window x:Class="VocalWorkbench.Apps.Desktop.Features.Splash.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:VocalWorkbench.Apps.Desktop.Controls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None"
        Title="Vocal Workbench" Height="300" Width="450">

    <Border BorderThickness="1" BorderBrush="{DynamicResource HighlightDeepColour}" Background="{DynamicResource BackgroundMidColour}">
        <Grid>
        <controls:VocalWorkbenchLogo_Solid Foreground="{DynamicResource HighlightMidColour}" Margin="100" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
    </Border>

</Window>
